---
interface Props {
  title: string;
  description: string;
  lang?: string;
  keywords?: string;
  author?: string;
  canonicalUrl?: string;
}

const {
  title = "Waldo Fernández Fariñas - Software Engineer Portfolio",
  description = "Software Engineer with 2 years of experience. Explore my projects and professional experience.",
  lang = "en",
  keywords = "software engineer, web developer, portfolio, waldo fernandez, full stack developer",
  author = "Waldo Fernández Fariñas",
  canonicalUrl = Astro.url.href,
} = Astro.props;

const fullCanonicalUrl = new URL(canonicalUrl, Astro.site || Astro.url.origin)
  .href;
---

<!doctype html>
<html lang={lang}>
  <head>
    <link rel="sitemap" href="/sitemap-index.xml" />

    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=5"
    />

    <meta
      name="google-site-verification"
      content="4Sv6dK6_mv_zfnr9FzfL3L64gShqMK66-gh8L4LEe6Y"
    />

    <link rel="canonical" href={fullCanonicalUrl} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <meta name="generator" content={Astro.generator} />

    <!-- Additional Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="language" content={lang === "en" ? "English" : "Spanish"} />
    <meta name="revisit-after" content="7 days" />
    <meta name="theme-color" content="#2196F3" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={fullCanonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content={`${Astro.url.origin}/icons/letra-w.png`}
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content={lang === "en" ? "en_US" : "es_ES"} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={fullCanonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta
      property="twitter:image"
      content={`${Astro.url.origin}/icons/letra-w.png`}
    />

    <!-- Favicon -->
    <link rel="shortcut icon" href="/icons/letra-w.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/icons/letra-w.png" />
    <link rel="apple-touch-icon" href="/icons/letra-w.png" />

    <!-- AOS Animations -->
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />

    <!-- Blend CSS Files -->
    <link rel="stylesheet" type="text/css" href="/blend/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="/blend/css/style.css" />
    <link rel="stylesheet" type="text/css" href="/blend/css/responsive.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/blend/css/color/blue.css"
      id="colors"
    />
    <link rel="stylesheet" type="text/css" href="/blend/css/settings.css" />
    <link rel="stylesheet" type="text/css" href="/blend/css/owl.carousel.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/blend/css/jquery.fancybox.css"
    />
    <link rel="stylesheet" type="text/css" href="/blend/css/open-sans.css" />
    <link rel="stylesheet" type="text/css" href="/blend/css/raleway.css" />
    <link rel="stylesheet" type="text/css" href="/blend/css/roboto.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/blend/css/fonts/fontello.css"
    />
    <link rel="stylesheet" type="text/css" href="/blend/css/fonts/gizmo.css" />
    <link rel="stylesheet" type="text/css" href="/blend/css/fonts/picons.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css"
    />

    <script is:inline src="/blend/js/modernizr.custom.js"></script>

    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        name: "Waldo Fernández Fariñas",
        jobTitle: "Software Engineer",
        description: description,
        url: fullCanonicalUrl,
        image: `${Astro.url.origin}/icons/letra-w.png`,
        sameAs: [
          "https://github.com/waldiiiFd",
          "https://linkedin.com/in/waldo-fernández-fariñas-3bbb1836a",
        ],
        knowsAbout: [
          "Software Engineering",
          "Web Development",
          "Full Stack Development",
        ],
      })}
    />
  </head>
  <body>
    <!-- Loader -->
    <div class="loader">
      <div class="spinner">
        <div class="double-bounce1"></div>
        <div class="double-bounce2"></div>
      </div>
    </div>

    <!-- Content Wrapper -->
    <div class="content-wrap">
      <div class="content">
        <slot />
      </div>
    </div>

    <!-- Blend JS Files -->
    <script is:inline src="/blend/js/jquery.min.js"></script>
    <script is:inline src="/blend/js/jquery.themepunch.plugins.min.js"></script>
    <script is:inline src="/blend/js/jquery.themepunch.revolution.min.js"
    ></script>
    <script is:inline src="/blend/js/bootstrap.min.js"></script>
    <script is:inline src="/blend/js/jquery.inview.js"></script>
    <script is:inline src="/blend/js/isotope.pkgd.min.js"></script>
    <script is:inline src="/blend/js/imagesloaded.pkgd.min.js"></script>
    <script is:inline src="/blend/js/jquery.fancybox.pack.js"></script>
    <script is:inline src="/blend/js/jquery.easytabs.min.js"></script>
    <script is:inline src="/blend/js/jquery.sticky.js"></script>
    <script is:inline src="/blend/js/owl.carousel.min.js"></script>
    <script is:inline src="/blend/js/jquery.zflickrfeed.min.js"></script>
    <script is:inline src="/blend/js/twitter-bootstrap-hover-dropdown.min.js"
    ></script>
    <script is:inline src="/blend/js/jquery.easy-pie-chart.js"></script>
    <script is:inline src="/blend/js/classie.js"></script>
    <script is:inline src="/blend/js/search.js"></script>
    <script is:inline src="/blend/js/gizmo.js"></script>
    <script is:inline src="/blend/js/scripts.js"></script>

    <!-- AOS Animation Library -->
    <script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <!-- Custom Scripts -->
    <script is:inline>
      document.addEventListener("DOMContentLoaded", function () {
        // Initialize AOS
        AOS.init({
          duration: 800,
          easing: "ease-in-out",
          once: true,
          offset: 100,
          delay: 100,
        });

        // Fade In Sections on Scroll
        const fadeInSections = document.querySelectorAll(".fade-in-section");

        const appearOnScroll = new IntersectionObserver(
          function (entries, observer) {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add("is-visible");
                observer.unobserve(entry.target);
              }
            });
          },
          { threshold: 0.15 }
        );

        fadeInSections.forEach((section) => {
          appearOnScroll.observe(section);
        });

        // Smooth Parallax Effect
        window.addEventListener("scroll", function () {
          const parallaxSections =
            document.querySelectorAll(".parallax-section");
          const scrolled = window.pageYOffset;

          parallaxSections.forEach((section) => {
            const speed = section.dataset.speed || 0.5;
            const yPos = -(scrolled * speed);
            section.style.transform = `translateY(${yPos}px)`;
          });
        });
      });
    </script>
  </body>
</html>
