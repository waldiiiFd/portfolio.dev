---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="experience" class="bg-gray t-pad100 b-pad80">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center b-pad60">
        <h2 class="heading">{t('experience.title')}</h2>
        <p class="h-sub">
          {t('experience.subtitle')}
        </p>
      </div>
    </div>

    <div class="row">
      <!-- Current Professional Experience -->
      <div class="col-md-12 b-mgr40">
        <div
          class="experience-card bg-white"
          style="padding: 35px; border-radius: 8px; border-left: 4px solid var(--main-color); position: relative;"
        >
          <div
            class="experience-badge"
            style="position: absolute; top: 35px; right: 35px; background: var(--main-color); color: white; padding: 5px 15px; border-radius: 20px; font-size: 12px; font-weight: 600;"
          >
            {t('experience.current')}
          </div>
          <div class="content">
            <h3 style="color: var(--main-color); margin-bottom: 5px;">
              {t('experience.job.title')}
            </h3>
            <p
              class="text-muted"
              style="margin: 8px 0; font-size: 16px; font-weight: 600;"
            >
              <i class="icon-picons-briefcase" style="margin-right: 8px;"
              ></i>{t('experience.job.company')}
            </p>
            <p class="text-muted" style="margin: 5px 0 20px 0;">
              <i class="icon-picons-calendar" style="margin-right: 8px;"
              ></i>{t('experience.job.period')}
            </p>
            <p style="line-height: 1.8; color: #555;">
              {t('experience.job.description')}
            </p>
            <div style="margin-top: 20px;">
              <span class="label label-primary" style="margin-right: 10px;"
                >PHP</span
              >
              <span class="label label-primary" style="margin-right: 10px;"
                >Laravel</span
              >
              <span class="label label-primary" style="margin-right: 10px;"
                >REST APIs</span
              >
              <span class="label label-primary" style="margin-right: 10px;"
                >PostgreSQL</span
              >
              <span class="label label-primary" style="margin-right: 10px;"
                >MariaDB</span
              >
              <span class="label label-primary" style="margin-right: 10px;"
                >Git
              </span>
              <span class="label label-primary" style="margin-right: 10px;"
                >GitHub</span
              >
              <span class="label label-primary" style="margin-right: 10px;"
                >Postman API</span
              >
            </div>
          </div>
        </div>
      </div>

      <!-- Education -->
      <div class="col-md-12 b-mgr40">
        <div
          class="experience-card bg-white"
          style="padding: 35px; border-radius: 8px; border-left: 4px solid #3498db;"
        >
          <div class="content">
            <h3 style="color: #3498db; margin-bottom: 5px;">{t('experience.education.title')}</h3>
            <p
              class="text-muted"
              style="margin: 8px 0; font-size: 16px; font-weight: 600;"
            >
              <i class="icon-picons-graduation" style="margin-right: 8px;"
              ></i>{t('experience.education.school')}
            </p>
            <p class="text-muted" style="margin: 5px 0 20px 0;">
              <i class="icon-picons-calendar" style="margin-right: 8px;"
              ></i>{t('experience.education.period')}
            </p>
            <p style="line-height: 1.8; color: #555; margin-bottom: 20px;">
              {t('experience.education.description')}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>