---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="about-me" class="bg-gray t-pad100 b-pad80">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2 class="heading">{t('about.title')}</h2>
        <p class="lead t-mgr30">
          {t('about.lead')}
        </p>
        <p class="t-mgr20">
          {t('about.p1')}
        </p>
        <p class="t-mgr20">
          {t('about.p2')}
        </p>
      </div>

      <div class="col-md-6">
        <div
          style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
            height: 500px; border-radius: 8px; display: flex; 
            align-items: center; justify-content: center; color: white;"
        >
          <div style="text-align: center;">
            <i class="icon-picons-user" style="font-size: 100px; opacity: 0.3;"
            ></i>
            <p style="margin-top: 20px; opacity: 0.7;">{t('about.photo')}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>