---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="about-me" class="bg-gray t-pad100 b-pad80">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2 class="heading">{t('about.title')}</h2>
        <p class="lead t-mgr30">
          {t('about.lead')}
        </p>
        <p class="t-mgr20">
          {t('about.p1')}
        </p>
        <p class="t-mgr20">
          {t('about.p2')}
        </p>
      </div>

      <div class="col-md-6">
        <div style="display: flex; justify-content: center; align-items: center;">
          <div
            style="width: 400px; height: 400px; border-radius: 50%; 
              overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.15);"
          >
            <img 
              src="/images/photo_2025-12-16_13-21-38.jpg" 
              alt={t('about.photo')}
              style="width: 100%; height: 100%; object-fit: cover;"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>