---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="about-me" class="bg-gray t-pad100 b-pad80">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2 class="heading">{t('about.title')}</h2>
        <p class="lead t-mgr30">
          {t('about.lead')}
        </p>
        <p class="t-mgr20">
          {t('about.p1')}
        </p>
        <p class="t-mgr20">
          {t('about.p2')}
        </p>
      </div>

      <div class="col-md-6">
        <div
          style="height: 500px; border-radius: 8px; overflow: hidden; 
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);"
        >
          <img 
            src="/images/photo_2025-12-01_13-14-35.jpg" 
            alt={t('about.photo')}
            style="width: 100%; height: 100%; object-fit: cover;"
          />
        </div>
      </div>
    </div>
  </div>
</section>